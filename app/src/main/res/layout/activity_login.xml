<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sd_dtu.synergygopartner.LoginAct"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agent ID"
        android:layout_gravity="center"
        android:id="@+id/textView31"
        android:textSize="40dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="#234f62"
        android:layout_marginTop="90dp" />
    <EditText
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AgenitIDeditText"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:inputType="textPersonName"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:hint="Agent ID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textStyle="bold"
        android:text="Password"
        android:textColor="#234f62"
        android:id="@+id/textView42"
        android:layout_gravity="center"
        android:fontFamily="monospace"
        android:layout_marginTop="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:padding="20dp"
        android:id="@+id/PasseditText"
        android:layout_gravity="center"
        android:hint="Password" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:background="#234f62"
        android:layout_gravity="center"
        android:layout_below="@+id/PasseditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:onClick="onClickLogin" />
</LinearLayout>
